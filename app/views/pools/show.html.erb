<div class="row">
  <h2>Pool Name: <%= @pool.name %></h2>
  <hr />
  <div class="col-md-6">
  <% if @pool.questions? %>
    <h2>Props</h2>
    <div class="list-group">
      <% @pool.questions.except(@question).each do |question| %>
        <div class="list-group-item">
          <h4 class="list-group-item-heading"><%= question.body %></h4>
          <% question.options.each do |option| %>
            <li><%= option.body %></li>
          <% end %>
          Edit | Delete
        </div>
      <% end %>
    </div>
  <% else %>
    <h2>Nothing</h2>
    <p>There are currently no questions, Come back later</p>
  <% end %>
  </div>

  <% if @pool.accepting_questions? %>
    <div class="col-md-6">
      <h2>Add a Prop</h2>
      <%= form_with model: @question do |f| %>
        <%= f.hidden_field :pool_id, value: @pool.id %>
        <div class="mb-3">
          <%= f.label :body, "Question", class: "form-label" %>
          <%= f.text_field :body, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <%= f.fields_for :options do |ff| %>
          <div class="mb-3">
            <%= ff.label :body, "Option", class: "form-label" %>
            <%= ff.text_field :body, class: "form-control" %>
          </div>
        <% end %>
        <div class="mb-3">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>