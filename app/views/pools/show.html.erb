<h2><%= @pool.name %></h2>

<div class="row">
  <div class="col-md-6">
  <% if @pool.questions? %>
    <h2>Existing Questions</h2>
    <% @pool.questions.each do |question| %>
      <p><%= question.body %></p>
    <% end %>
  <% else %>
    <h2>There are no Questions, Come back later</h2>
  <% end %>
  </div>

  <% if @pool.accepting_questions? %>
    <div class="col-md-6">
      <h2>Accepting Entries!</h2>
      <%= form_with model: @question do |f| %>
        <%= f.hidden_field :pool_id, value: @pool.id %>
        <div class="mb-3">
          <%= f.label :body, "Question", class: "form-label" %>
          <%= f.text_field :body, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <%= fields_for :options do |ff| %>
          <div class="mb-3">
            <%= ff.label :body, "Option 1", class: "form-label" %>
            <%= ff.text_field :body, class: "form-control" %>
          </div>
        <% end %>
        <%= fields_for :options do |ff| %>
          <div class="mb-3">
            <%= ff.label :body, "Option 2", class: "form-label" %>
            <%= ff.text_field :body, class: "form-control" %>
          </div>
        <% end %>
        <div class="mb-3">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>